{
  "name": "hyper-mcp-terminal",
  "version": "1.6.0",
  "description": "Hello World!",
  "main": "dist/electron/main.js",
  "type": "module",
  "author": {
    "name": "Dadigua",
    "email": "0laopo0@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BigSweetPotatoStudio/hyper-mcp-terminal"
  },
  "scripts": {
    "build": "npx tsc",
    "build:web": "npx webpack --mode production",
    "dev:web": "npx webpack -w",
    "dev:electron": "npm run build && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && npm run build:web && electron-builder",
    "electron:pack": "electron-builder --dir",
    "rebuild": "electron-rebuild"
  },
  "devDependencies": {
    "@ant-design/icons": "^4.8.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "antd": "^5.26.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^7.6.0",
    "cross-env": "^10.0.0",
    "css-loader": "^6.7.1",
    "electron": "^31.0.2",
    "electron-builder": "24.13.3",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.3",
    "moment": "^2.29.3",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "querystring-es3": "^0.2.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@types/express": "^4.17.21",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "commander": "^9.3.0",
    "cross-spawn": "^7.0.6",
    "dayjs": "^1.11.13",
    "express": "^4.18.2",
    "log4js": "^6.9.1",
    "node-pty": "^1.0.0",
    "nodemon": "^2.0.16",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.8.1",
    "strip-ansi": "^7.1.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "build": {
    "appId": "men.dadigua.hpyerchat",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "electron-dist"
    },
    "extraFiles": [],
    "extraResources": [],
    "files": [
      "dist/**/*",
      "build/**/*",
      "package.json",
      "node_modules/**/*",
      "frontend/logo.png",
      "!src/**",
      "!*.mts",
      "!python/**",
      "!tmp/**",
      "!tests/**",
      "!web/**",
      "!lib/**",
      "!README.md",
      "!ldh.todo",
      "!depend",
      "!tsconfig.json",
      "!webpack.config.js",
      "!electron/**",
      "!frontend/**"
    ],
    "icon": "frontend/logo.png",
    "linux": {
      "target": [
        {
          "arch": [
            "x64",
            "arm64"
          ],
          "target": "AppImage"
        },
        {
          "arch": [
            "x64",
            "arm64"
          ],
          "target": "deb"
        },
        {
          "arch": [
            "x64",
            "arm64"
          ],
          "target": "tar.gz"
        }
      ]
    },
    "mac": {
      "entitlements": "build/mac/entitlements.mac.plist",
      "entitlementsInherit": "build/mac/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Please give us access to your camera",
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      },
      "notarize": false,
      "target": [
        {
          "arch": [
            "arm64"
          ],
          "target": "dmg"
        },
        {
          "arch": [
            "arm64"
          ],
          "target": "zip"
        }
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "oneClick": false,
      "perMachine": true,
      "shortcutName": "hyper-mcp-terminal"
    },
    "productName": "hyper-mcp-terminal",
    "publish": [
      {
        "provider": "github",
        "owner": "BigSweetPotatoStudio",
        "repo": "hyper-mcp-terminal",
        "releaseType": "prerelease"
      }
    ],
    "win": {
      "target": [
        {
          "arch": [
            "x64"
          ],
          "target": "nsis"
        },
        {
          "arch": [
            "x64"
          ],
          "target": "zip"
        }
      ]
    }
  }
}
