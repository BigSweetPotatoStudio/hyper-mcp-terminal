{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "composite": false,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": false,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "target": "ESNext",
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "include": [
        "src",
        "frontend",
        "tests/test.ts"
    ]
}